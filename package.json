{
  "name": "acd-utils",
  "repository": "github:acd02/utils",
  "version": "7.1.0",
  "license": "ISC",
  "author": "acd02",
  "main": "dist/index.js",
  "module": "dist/acd-utils.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "npm run prettier && tsdx build",
    "test": "tsdx test",
    "test:watch": "tsdx test --watch",
    "test:coverage": "tsdx test --coverage --collectCoverageFrom='src/**/*.ts' --collectCoverageFrom='!src/**/index.ts'",
    "lint": "tsdx lint",
    "prettier": "prettier --config ./.prettierrc.json --write \"{src,test}/**/*.{ts,tsx}\"",
    "publish-np": "npm run test && npm run build && np"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && tsdx lint"
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 90,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@types/jest": "25.2.1",
    "husky": "4.2.5",
    "np": "6.2.1",
    "tsdx": "0.13.2",
    "tslib": "1.11.1",
    "typescript": "3.8.3"
  }
}
