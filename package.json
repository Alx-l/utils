{
  "name": "acd-utils",
  "repository": "github:acd02/utils",
  "version": "5.1.1",
  "license": "MIT",
  "author": "acd02",
  "main": "dist/index.js",
  "module": "dist/acd-utils.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "npm run prettier && tsdx build",
    "test": "tsdx test",
    "test:watch": "tsdx test --watch",
    "lint": "tsdx lint",
    "prettier": "prettier --config ./.prettierrc.json --write \"{src,test}/**/*.{ts,tsx}\"",
    "publish-np": "npm run build && np"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && tsdx lint"
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 90,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@types/jest": "^24.0.21",
    "husky": "^3.0.9",
    "np": "5.1.3",
    "tsdx": "^0.11.0",
    "tslib": "^1.10.0",
    "typescript": "^3.6.4"
  }
}
